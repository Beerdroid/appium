{
    "compilerOptions": {
        "moduleResolution": "Node16",
        "module": "NodeNext",
        "target": "es2022",
        "types": [
            "node",
            "@wdio/types",
            "@wdio/globals/types",
            "expect-webdriverio",
            "@wdio/mocha-framework",
            "@wdio/appium-service",
            "@wdio/visual-service",
            "@wdio/protocols/build/types"
        ],
        "skipLibCheck": true,
        "noEmit": true,
        "allowImportingTsExtensions": true,
        "resolveJsonModule": true,
        "isolatedModules": true,
        "strict": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noFallthroughCasesInSwitch": true
    },
    "include": [
        "./config/**/*.ts",
        "./tests/**/*.ts"
    ]
}